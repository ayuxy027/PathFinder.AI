{
    "version": 2,
    "name": "react-basics",
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "env": {
      "NPM_FLAGS": "--legacy-peer-deps",
      "NODE_ENV": "production"
    },
    "build": {
      "env": {
        "NPM_FLAGS": "--legacy-peer-deps"
      },
      "commands": {
        "install": "npm install --legacy-peer-deps",
        "build": "vite build"
      }
    },
    "routes": [
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "functions": {
      "api/**.js": {
        "runtime": "nodejs16.x"
      }
    },
    "cache": {
      "files": ["node_modules/**", "dist/**"]
    }
  }  